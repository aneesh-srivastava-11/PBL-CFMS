PORT=5000

# Database (Supabase Postgres)
# Replace with your actual connection string from Supabase -> Project Settings -> Database -> Connection String -> URI
# IMPORTANT: Use port 6543 (Session Pooler) if on IPv4 network!
DATABASE_URL=postgresql://user:password@aws-0-region.pooler.supabase.com:6543/postgres

# Storage (Supabase S3 Compatibility)
# Replace with your credentials from Supabase -> Project Settings -> Storage -> S3 Compatibility
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=your_region (e.g., ap-south-1)
AWS_BUCKET_NAME=uploads 
AWS_ENDPOINT=https://your-project-ref.storage.supabase.co/storage/v1/s3

# Firebase (Auth)
# You can use a serviceAccountKey.json file in backend/config/
# OR set these environment variables:
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
